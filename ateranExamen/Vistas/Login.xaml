<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ateranExamen.Vistas.Login"
             Title="Login">
    <VerticalStackLayout
        Padding="24"
        Spacing="24">
        <Label Text="LOGIN" TextColor="Red" HorizontalOptions="Center" FontSize="20"/>
        <Image Source="attenza.png" WidthRequest="250"/>
        <Grid Margin="20,35,20,20">

            

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>


            <BoxView BackgroundColor="Silver" Grid.Column="0" Grid.Row="0" />
            <BoxView BackgroundColor="Silver" Grid.Column="0" Grid.Row="1"/>
            

            <Entry x:Name="txtUsuario" Grid.Column="0" Grid.Row="0" Placeholder="Ingrese el usuario" PlaceholderColor="Black" />
            <Entry x:Name="txtContrasena" Grid.Column="0" Grid.Row="1" Placeholder="Ingrese la contraseÃ±a" PlaceholderColor="Black"/>

            
        </Grid>
        <Button Text="Ingresar" x:Name="btn_ingresar" Clicked="btn_ingresar_Clicked" TextColor="White" BackgroundColor="Black"/>


    </VerticalStackLayout>
</ContentPage>